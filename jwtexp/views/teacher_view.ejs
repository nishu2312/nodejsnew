<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/style.css">
    
</head>
<body>
    <header>
        <%- include('../common/header')%>
    </header>

    <form  action="/auth/logout"  style="float: right;">
        <button type="submit" class="btn btn-danger" style="float: right;">Logout</button>
  </form>
 
    
    <form action="" class="form-center" style="margin-left: 100px;">
        
            <button type="button" class="btn btn-info d-block mr-0 ml-auto">
                <a href="/logins">BACK</a>
              </button>
        
        <a href="/add" ><button type="button" class="btn btn-secondary" style="margin-right: 22%;margin-top: 60px; float: right;">Add</button></a>
    <table class="table table-bordered">
        <thead>
          <tr>
           
              <th scope="col">Rollno</th>
              <th scope="col">Name</th>
            <th scope="col">Date of Birth</th>
            <th scope="col">Score</th>
            <th scope="col">Action</th>
            
          </tr>
        </thead>
        <tbody>
            <% data.forEach(item =>{%>
              <tr>
              <td><%= item.Rollno %></td>
              <td><%= item.Name %></td>
              <td><%= item.DateofBirth %></td>
              <td><%= item.Score %></td>
              <td>
    
              <a href="/edit/<%= item.Rollno %>">Edit</a>
             
              
                 <form  action="/api/teacherview/delete/<%= item.Rollno %>" method="POST" style="float: right;">
                      <button type="submit" class="btn btn-danger" style="float: right;">Delete</button>
                </form>
            </tr><%});%>
        </td>
          </tbody>
      </table>
    </form>
    
</body>
</html>